@model Lab5.Models.AnswerImage

@{
    ViewData["Title"] = "Create";
}

<h1>Upload</h1>

<h4>Upload an answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" enctype="multipart/form-data">
            <div class="custom-radio">
                <div class="btn btn-sm float-left">
                    <input name="question" type="radio" value="Computer" checked>What will the computers look like in 20 years?<br />
                    <input name="question" type="radio" value="Earth">What will the earth look like in 20 years?<br />
                </div>
            </div>

            <div class="form-group">
                <div class="btn btn-sm float-left">
                    <input name="answerImage" type="file">
                </div>
            </div>

            <div class="form-group">
                <button name="answerImage" class="btn btn-primary">Upload Now</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
